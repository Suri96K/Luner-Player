<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/banner"
            android:layout_width="368dp"
            android:layout_height="37dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:background="@android:color/background_dark"
                android:text="Artists"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/imagelist"
            android:layout_width="368dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:background="@android:color/black"
                app:srcCompat="@mipmap/letter" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#000000"
                app:srcCompat="@mipmap/b" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ArtistList"
            android:layout_width="368dp"
            android:layout_height="1000dp"
            android:layout_marginTop="12dp"
            android:background="@color/cardview_light_background"
            android:orientation="vertical">


            //artist information

            //1st artist


            <LinearLayout
                android:id="@+id/firsrArtist"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/background_light"
                android:gravity="top"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:src="@mipmap/first"
                    app:srcCompat="@mipmap/first" />

                <LinearLayout
                    android:id="@+id/Infor_first"
                    android:layout_width="250dp"
                    android:layout_height="180dp"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_art1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amarasiri Peiris"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_numSongs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="12 Songs" />

                    <TextView
                        android:id="@+id/tv_numAlbums"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="4 Albums" />


                </LinearLayout>


                //4t Artist

                //5th artist

                //6th artist

                //7th artst

                //8th artist

                //9th

                //10th


            </LinearLayout>

            //2nd Artist

            <LinearLayout
                android:id="@+id/secArtist"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"

                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:scrollbarSize="@dimen/cardview_default_radius">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    app:srcCompat="@mipmap/second" />

                <LinearLayout
                    android:id="@+id/Infor_sec"
                    android:layout_width="250dp"
                    android:layout_height="180dp"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_art2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shashika Nisansala"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_numSongs2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="10" />

                    <TextView
                        android:id="@+id/tv_numAlbums2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="2 Albums" />


                </LinearLayout>


            </LinearLayout>


            //3nd Artist

            <LinearLayout
                android:id="@+id/ThrdArtist"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/background_light"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="113dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    app:srcCompat="@mipmap/thord" />

                <LinearLayout
                    android:id="@+id/Infor_trd"
                    android:layout_width="260dp"
                    android:layout_height="180dp"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="17dp"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_art3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sanuka Wickramasingha"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_numSongs3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="8 Songs" />

                    <TextView
                        android:id="@+id/tv_numAlbums3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="2 Albums" />


                </LinearLayout>


            </LinearLayout>


            //4th Artist

            <LinearLayout
                android:id="@+id/ForthArtist"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/fourth" />


                <LinearLayout
                    android:id="@+id/Infor_four"
                    android:layout_width="260dp"
                    android:layout_height="180dp"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="22dp"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_four"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Umariya Singhawansha"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_numSongs4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="15 Songs" />

                    <TextView
                        android:id="@+id/tv_numAlbums4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="4 Albums" />

                </LinearLayout>

            </LinearLayout>

            //5th Artist

            <LinearLayout
                android:id="@+id/FifthArtist"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>